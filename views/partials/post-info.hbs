<!-- MODULE EXAMPLE OF POST INFO -->
<article class='post block'>
  <!--POST TILE WITH URL-->
  <div class='title is-3'>
    <a class='is-capitalized' href='/post/{{id}}'>{{title}}</a>
    <span>{{user_name}}</span>
    <p class='title is-5'>{{post_content}}</p>
  </div>
  <!-- user Info & Date Posted -->
  <div class='user-name'>
    <span class='subtitle is-6'>@ {{user.user_name}}</span>
    <span class='subtitle is-6'> | {{created_at}}</span>
  </div>
</article>